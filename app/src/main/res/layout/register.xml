<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="사용자 등록"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_text"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:text="사용자 이름"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_text"
        app:layout_constraintBottom_toTopOf="@id/pw_text"/>

    <EditText
        android:id="@+id/id_textbox"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="이름을 입력하세요"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/id_text"
        app:layout_constraintLeft_toRightOf="@id/id_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/id_text" />

    <TextView
        android:id="@+id/pw_text"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="내 전화번호"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_text"
        app:layout_constraintBottom_toBottomOf="@id/find_id"/>

    <EditText
        android:id="@+id/pw_textbox"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="번호를 입력하세요"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/pw_text"
        app:layout_constraintLeft_toRightOf="@id/pw_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pw_text" />

    <TextView
        android:id="@+id/find_id"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="사용할 ID"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pw_text"
        app:layout_constraintBottom_toTopOf="@id/pw_text1"/>

    <EditText
        android:id="@+id/register_textbutton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="아이디를 입력하세요"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/find_id"
        app:layout_constraintLeft_toRightOf="@id/find_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/find_id" />

    <Button
        android:id="@+id/check_button"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="중복확인"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/register_textbutton"
        app:layout_constraintLeft_toLeftOf="@id/register_textbutton"
        app:layout_constraintRight_toRightOf="@id/register_textbutton"/>

    <TextView
        android:id="@+id/pw_text1"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:text="비밀번호"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/find_id"
        app:layout_constraintBottom_toTopOf="@id/pw_text2"/>

    <EditText
        android:id="@+id/pw_textbox1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="비밀번호를 입력하세요"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/pw_text1"
        app:layout_constraintLeft_toRightOf="@id/pw_text1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pw_text1" />

    <TextView
        android:id="@+id/pw_text2"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginLeft="40dp"
        android:text="비밀번호 확인"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pw_text1"
        app:layout_constraintBottom_toTopOf="@id/login_button"/>

    <EditText
        android:id="@+id/pw_textbox2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="한번 더 입력하세요"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/pw_text2"
        app:layout_constraintLeft_toRightOf="@id/pw_text2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/pw_text2" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="등록"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>