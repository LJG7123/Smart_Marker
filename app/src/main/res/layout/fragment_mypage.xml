<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#c6e2ff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="175dp"
        android:layout_marginLeft="55dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="아이디"
            android:textColor="@color/black"
            android:textSize="22sp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@drawable/roundbutton2"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="60dp">

            <TextView
                android:id="@+id/Mypage_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textSize="23sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="55dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="보호자 이름"
            android:textColor="@color/black"
            android:textSize="21sp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@drawable/roundbutton2"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="60dp">

            <TextView
                android:id="@+id/Mypage_name"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="23sp"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="55dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="집 주소"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="21sp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/roundbutton2"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="60dp">

            <TextView
                android:id="@+id/Mypage_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="55dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="비상 연락처"
            android:textColor="@color/black"
            android:textSize="21sp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@drawable/roundbutton2"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="60dp">

            <TextView
                android:id="@+id/Mypage_phone"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="23sp"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="55dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="설정 범위"
            android:textColor="@color/black"
            android:textSize="22sp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@drawable/roundbutton2"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="60dp">

            <TextView
                android:id="@+id/Mypage_range"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="23sp"
                android:textColor="@color/black"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="55dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="복귀 시간"
            android:textColor="@color/black"
            android:textSize="22sp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@drawable/roundbutton2"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="60dp">

            <TextView
                android:id="@+id/Mypage_time"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="23sp" />
        </LinearLayout>

    </LinearLayout>






</LinearLayout>